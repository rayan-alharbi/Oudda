<div class="tool-wrapper">
    <div class="controls">
        <div class="dims">
            <label>Rows <input type="number" id="rows" value="3" /></label>
            <label>Cols <input type="number" id="cols" value="3" /></label>
            <button id="gen-grid" class="btn-sm">Create Grid</button>
        </div>
    </div>

    <div id="grid-container" class="grid-container"></div>

    <button id="convert" class="btn">Generate Markdown</button>

    <textarea id="output" readonly placeholder="Markdown result..."></textarea>
</div>

<script>
    const rowsIn = document.getElementById("rows") as HTMLInputElement;
    const colsIn = document.getElementById("cols") as HTMLInputElement;
    const grid = document.getElementById("grid-container");
    const out = document.getElementById("output") as HTMLTextAreaElement;

    function createGrid() {
        const r = parseInt(rowsIn.value);
        const c = parseInt(colsIn.value);
        grid.innerHTML = "";
        grid.style.gridTemplateColumns = `repeat(${c}, 1fr)`;

        for (let i = 0; i < r * c; i++) {
            const input = document.createElement("input");
            input.placeholder = i < c ? "Header" : "Cell";
            grid.appendChild(input);
        }
    }

    document.getElementById("gen-grid").addEventListener("click", createGrid);

    document.getElementById("convert").addEventListener("click", () => {
        const inputs = grid.querySelectorAll("input");
        const r = parseInt(rowsIn.value);
        const c = parseInt(colsIn.value);
        let md = "";

        for (let i = 0; i < r; i++) {
            md += "|";
            for (let j = 0; j < c; j++) {
                md += " " + (inputs[i * c + j].value || " ") + " |";
            }
            md += "\n";
            if (i === 0) {
                md += "|";
                for (let j = 0; j < c; j++) md += " --- |";
                md += "\n";
            }
        }
        out.value = md;
    });

    createGrid();
</script>

<style>
    .tool-wrapper {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: 800px;
        margin: 0 auto;
    }
    .controls {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }
    .dims label {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }
    input[type="number"] {
        width: 60px;
        padding: 0.3rem;
    }
    .btn-sm {
        padding: 0.3rem 0.8rem;
        cursor: pointer;
    }

    .grid-container {
        display: grid;
        gap: 0.5rem;
        margin: 1rem 0;
        overflow-x: auto;
    }
    .grid-container input {
        padding: 0.5rem;
        border: 1px solid var(--c-border);
        min-width: 100px;
    }

    .btn {
        background: var(--c-primary);
        color: white;
        padding: 1rem;
        border: none;
        border-radius: 6px;
        font-weight: bold;
        cursor: pointer;
    }
    textarea {
        height: 150px;
        font-family: monospace;
        padding: 1rem;
        border: 1px solid var(--c-border);
        border-radius: 8px;
    }
</style>

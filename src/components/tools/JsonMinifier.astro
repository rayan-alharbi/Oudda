<div class="tool-wrapper">
    <textarea id="input" placeholder='{\n  "key": "value"\n}'></textarea>
    <button id="minify-btn" class="btn">Minify JSON</button>
    <textarea id="output" readonly></textarea>
    <div id="error" class="error"></div>
</div>

<script>
    const input = document.getElementById("input") as HTMLTextAreaElement;
    const output = document.getElementById("output") as HTMLTextAreaElement;
    const err = document.getElementById("error");

    document.getElementById("minify-btn").addEventListener("click", () => {
        err.textContent = "";
        try {
            const json = JSON.parse(input.value);
            output.value = JSON.stringify(json);
        } catch (e) {
            err.textContent = "Invalid JSON: " + e.message;
            output.value = "";
        }
    });
</script>

<style>
    .tool-wrapper {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    textarea {
        width: 100%;
        height: 200px;
        padding: 1rem;
        border: 1px solid var(--c-border);
        border-radius: 8px;
        font-family: monospace;
    }
    .btn {
        background: var(--c-primary);
        width: 150px;
        color: white;
        padding: 0.8rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
    }
    .error {
        color: var(--c-danger, #e74c3c);
    }
</style>

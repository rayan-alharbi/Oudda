<div class="tool-wrapper">
    <textarea id="input" placeholder="SELECT * FROM table -- comment"
    ></textarea>
    <button id="minify-btn" class="btn">Minify SQL</button>
    <textarea id="output" readonly></textarea>
</div>

<script>
    const input = document.getElementById("input") as HTMLTextAreaElement;
    const output = document.getElementById("output") as HTMLTextAreaElement;

    document.getElementById("minify-btn").addEventListener("click", () => {
        let sql = input.value;

        // Remove -- comments
        sql = sql.replace(/--.*$/gm, "");
        // Remove /* */ comments
        sql = sql.replace(/\/\*[\s\S]*?\*\//g, "");
        // Collapse whitespace
        sql = sql.replace(/\s+/g, " ");
        // Ensure space around keywords? Not strictly needed if space collapsed to 1.

        output.value = sql.trim();
    });
</script>

<style>
    .tool-wrapper {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    textarea {
        width: 100%;
        height: 200px;
        padding: 1rem;
        border: 1px solid var(--c-border);
        border-radius: 8px;
        font-family: monospace;
    }
    .btn {
        background: var(--c-primary);
        width: 150px;
        color: white;
        padding: 0.8rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
    }
</style>

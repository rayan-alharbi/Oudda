<div class="shadow-tool">
    <div class="preview-area">
        <div id="preview-box" class="box"></div>
    </div>

    <div class="controls">
        <div class="control-group">
            <label>إزاحة أفقية (X)</label>
            <input type="range" id="x-offset" min="-50" max="50" value="5" />
        </div>
        <div class="control-group">
            <label>إزاحة عمودية (Y)</label>
            <input type="range" id="y-offset" min="-50" max="50" value="5" />
        </div>
        <div class="control-group">
            <label>ضبابية (Blur)</label>
            <input type="range" id="blur-radius" min="0" max="100" value="10" />
        </div>
        <div class="control-group">
            <label>انتشار (Spread)</label>
            <input
                type="range"
                id="spread-radius"
                min="-50"
                max="50"
                value="0"
            />
        </div>
        <div class="control-group">
            <label>لون الظل</label>
            <input type="color" id="shadow-color" value="#000000" />
            <input
                type="range"
                id="shadow-opacity"
                min="0"
                max="1"
                step="0.01"
                value="0.2"
            />
        </div>
    </div>

    <div class="code-output">
        <code>box-shadow: <span id="code"></span>;</code>
    </div>
</div>

<script>
    const box = document.getElementById("preview-box");
    const x = document.getElementById("x-offset") as HTMLInputElement;
    const y = document.getElementById("y-offset") as HTMLInputElement;
    const blur = document.getElementById("blur-radius") as HTMLInputElement;
    const spread = document.getElementById("spread-radius") as HTMLInputElement;
    const color = document.getElementById("shadow-color") as HTMLInputElement;
    const opacity = document.getElementById(
        "shadow-opacity",
    ) as HTMLInputElement;
    const code = document.getElementById("code");

    function hexToRgba(hex, alpha) {
        const r = parseInt(hex.slice(1, 3), 16);
        const g = parseInt(hex.slice(3, 5), 16);
        const b = parseInt(hex.slice(5, 7), 16);
        return `rgba(${r}, ${g}, ${b}, ${alpha})`;
    }

    function update() {
        const c = hexToRgba(color.value, opacity.value);
        const val = `${x.value}px ${y.value}px ${blur.value}px ${spread.value}px ${c}`;
        box.style.boxShadow = val;
        code.textContent = val;
    }

    [x, y, blur, spread, color, opacity].forEach((el) =>
        el.addEventListener("input", update),
    );
    update();
</script>

<style>
    .shadow-tool {
        max-width: 600px;
        margin: 0 auto;
    }
    .preview-area {
        padding: 50px;
        background: #fff;
        border: 1px solid #ccc;
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }
    .box {
        width: 100px;
        height: 100px;
        background: var(--c-primary);
        border-radius: 8px;
    }
    .controls {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-bottom: 20px;
    }
    .control-group {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }
    .code-output {
        background: #1e293b;
        color: #fff;
        padding: 15px;
        border-radius: 6px;
        font-family: monospace;
        overflow-x: auto;
    }
</style>

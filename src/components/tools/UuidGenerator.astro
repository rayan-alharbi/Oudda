<div class="uuid-tool">
    <div class="output-row">
        <input type="text" id="uuid-output" readonly />
        <button id="copy-uuid" class="btn">نسخ</button>
    </div>
    <button id="gen-uuid" class="btn-primary">توليد UUID جديد</button>
</div>

<script>
    const out = document.getElementById("uuid-output") as HTMLInputElement;

    function uuidv4() {
        return "10000000-1000-4000-8000-100000000000".replace(/[018]/g, (c) =>
            (
                +c ^
                (crypto.getRandomValues(new Uint8Array(1))[0] &
                    (15 >> (+c / 4)))
            ).toString(16),
        );
    }

    document.getElementById("gen-uuid").addEventListener("click", () => {
        out.value = uuidv4();
    });

    document.getElementById("copy-uuid").addEventListener("click", () => {
        navigator.clipboard.writeText(out.value);
    });

    out.value = uuidv4(); // init
</script>

<style>
    .uuid-tool {
        max-width: 500px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }
    .output-row {
        display: flex;
        gap: 10px;
    }
    input {
        flex: 1;
        padding: 10px;
        font-family: monospace;
        font-size: 1.1rem;

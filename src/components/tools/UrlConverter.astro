<div class="url-tool">
    <textarea id="url-input" placeholder="https://example.com/مرحبا"></textarea>
    <div class="actions">
        <button id="encode">Encode</button>
        <button id="decode">Decode</button>
    </div>
    <textarea id="url-output" readonly></textarea>
</div>

<script>
    const input = document.getElementById("url-input") as HTMLTextAreaElement;
    const output = document.getElementById("url-output") as HTMLTextAreaElement;

    document
        .getElementById("encode")
        .addEventListener(
            "click",
            () => (output.value = encodeURIComponent(input.value)),
        );
    document
        .getElementById("decode")
        .addEventListener(
            "click",
            () => (output.value = decodeURIComponent(input.value)),
        );
</script>

<style>
    .url-tool {
        max-width: 600px;
        margin: 0 auto;
    }
    textarea {
        width: 100%;
        height: 100px;
        padding: 10px;
        border: 1px solid var(--c-border);
        border-radius: 6px;
        resize: vertical;
        margin-bottom: 10px;
    }
    .actions {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-bottom: 15px;
    }
    button {
        padding: 8px 16px;
        background: var(--c-primary);
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

<div class="conv-grid">
    <div class="cell">
        <label>Milliliters (ml)</label>
        <input type="number" id="ml" />
    </div>
    <div class="cell">
        <label>Liters (L)</label>
        <input type="number" id="l" />
    </div>
    <div class="cell">
        <label>Gallons (US)</label>
        <input type="number" id="gal" />
    </div>
    <div class="cell">
        <label>Cubic Meters (mÂ³)</label>
        <input type="number" id="m3" />
    </div>
    <div class="cell">
        <label>Cups (US)</label>
        <input type="number" id="cup" />
    </div>
</div>

<script>
    const els = {
        ml: document.getElementById("ml") as HTMLInputElement,
        l: document.getElementById("l") as HTMLInputElement,
        gal: document.getElementById("gal") as HTMLInputElement,
        m3: document.getElementById("m3") as HTMLInputElement,
        cup: document.getElementById("cup") as HTMLInputElement,
    };

    // Factors relative to Liters
    const factors = {
        l: 1,
        ml: 0.001,
        gal: 3.78541,
        m3: 1000,
        cup: 0.236588,
    };

    function update(source) {
        const val = parseFloat(els[source].value);
        if (isNaN(val)) return;

        // Convert to Liters
        const lVal = val * factors[source];

        Object.keys(els).forEach((key) => {
            if (key !== source) {
                els[key].value = (lVal / factors[key]).toPrecision(6);
            }
        });
    }

    Object.keys(els).forEach((k) => {
        els[k].addEventListener("input", () => update(k));
    });
</script>

<style>
    .conv-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
        gap: 1.5rem;
        max-width: 600px;
        margin: 0 auto;
    }
    .cell {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    input {
        padding: 0.8rem;
        border: 1px solid var(--c-border);
        border-radius: 6px;
    }
</style>

            </div>
        `,
            )
            .join("");

        document.querySelectorAll(".port-card").forEach((card) => {
            card.addEventListener("click", () => {
                const port = (card as HTMLElement).dataset.port || "80";
                containerPort.value = port;
                updateMapping();
            });
        });
    }

    hostPort.addEventListener("input", updateMapping);
    containerPort.addEventListener("input", updateMapping);
    protocol.addEventListener("change", updateMapping);

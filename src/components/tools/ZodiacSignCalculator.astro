<div class="zodiac-box">
    <div class="input-area">
        <label>Date of Birth</label>
        <input type="date" id="dob" />
    </div>

    <div class="result" id="result-area" style="display:none;">
        <div class="icon" id="z-icon">♈</div>
        <div class="name" id="z-name">Aries</div>
        <div class="range" id="z-range">Mar 21 - Apr 19</div>
    </div>
</div>

<script>
    const dob = document.getElementById("dob") as HTMLInputElement;
    const resArea = document.getElementById("result-area");
    const zIcon = document.getElementById("z-icon");
    const zName = document.getElementById("z-name");
    const zRange = document.getElementById("z-range");

    const signs = [
        { name: "Capricorn", icon: "♑", start: [12, 22], end: [1, 19] },
        { name: "Aquarius", icon: "♒", start: [1, 20], end: [2, 18] },
        { name: "Pisces", icon: "♓", start: [2, 19], end: [3, 20] },
        { name: "Aries", icon: "♈", start: [3, 21], end: [4, 19] },
        { name: "Taurus", icon: "♉", start: [4, 20], end: [5, 20] },
        { name: "Gemini", icon: "♊", start: [5, 21], end: [6, 20] },
        { name: "Cancer", icon: "♋", start: [6, 21], end: [7, 22] },
        { name: "Leo", icon: "♌", start: [7, 23], end: [8, 22] },
        { name: "Virgo", icon: "♍", start: [8, 23], end: [9, 22] },
        { name: "Libra", icon: "♎", start: [9, 23], end: [10, 22] },
        { name: "Scorpio", icon: "♏", start: [10, 23], end: [11, 21] },
        { name: "Sagittarius", icon: "♐", start: [11, 22], end: [12, 21] },
    ];

    dob.addEventListener("input", () => {
        const d = new Date(dob.value);
        if (isNaN(d.getTime())) return;

        const m = d.getMonth() + 1; // 1-12
        const day = d.getDate();

        // Check sign
        const sign = signs.find((s) => {
            // Check if date falls in range
            // Logic: if current month is start month and day >= start day
            // OR if current month is end month and day <= end day

            // Special case Capricorn spanning years (Dec-Jan) handled by array order usually or logic check
            if (s.name === "Capricorn") {
                return (m === 12 && day >= 22) || (m === 1 && day <= 19);
            }
            return (
                (m === s.start[0] && day >= s.start[1]) ||
                (m === s.end[0] && day <= s.end[1])
            );
        });

        if (sign) {
            zIcon.textContent = sign.icon;
            zName.textContent = sign.name;
            zRange.textContent = `${sign.start[0]}/${sign.start[1]} - ${sign.end[0]}/${sign.end[1]}`;
            resArea.style.display = "flex";
        }
    });
</script>

<style>
    .zodiac-box {
        max-width: 400px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        align-items: center;
    }
    .input-area {
        width: 100%;
        text-align: center;
    }
    input {
        padding: 1rem;
        border: 1px solid var(--c-border);
        border-radius: 8px;
        font-size: 1.2rem;
    }
    .result {
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 0.5rem;
        background: var(--c-surface);
        padding: 2rem;
        border-radius: 50%;
        width: 200px;
        height: 200px;
        justify-content: center;
        border: 4px solid var(--c-primary);
    }
    .icon {
        font-size: 4rem;
        margin-bottom: 0.5rem;
    }
    .name {
        font-size: 1.5rem;
        font-weight: bold;
    }
    .range {
        color: var(--c-text-muted);
        font-size: 0.9rem;
    }
</style>

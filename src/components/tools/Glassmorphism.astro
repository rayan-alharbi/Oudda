<div class="tool-content">
    <div class="glass-container">
        <div id="glass-box" class="glass-box">
            <h2>Glassmorphism</h2>
            <p>Adjust the sliders to change the effect.</p>
        </div>
    </div>

    <div class="controls">
        <div class="control-group">
            <label>Blur: <span id="blur-val">10</span>px</label>
            <input type="range" id="blur" min="0" max="20" value="10" />
        </div>
        <div class="control-group">
            <label>Transparency: <span id="alpha-val">0.2</span></label>
            <input
                type="range"
                id="alpha"
                min="0"
                max="1"
                step="0.01"
                value="0.2"
            />
        </div>
        <div class="control-group">
            <label>Color</label>
            <input type="color" id="color" value="#ffffff" />
        </div>
    </div>

    <div class="code-output">
        <pre id="css-output"></pre>
        <button id="copy" class="btn">Copy CSS</button>
    </div>
</div>

<script>
    const box = document.getElementById("glass-box");
    const output = document.getElementById("css-output");
    const inputs = ["blur", "alpha", "color"];

    function update() {
        const blur = (document.getElementById("blur") as HTMLInputElement)
            .value;
        const alpha = (document.getElementById("alpha") as HTMLInputElement)
            .value;
        const colorHex = (document.getElementById("color") as HTMLInputElement)
            .value;

        // Hex to RGB
        const r = parseInt(colorHex.slice(1, 3), 16);
        const g = parseInt(colorHex.slice(3, 5), 16);
        const b = parseInt(colorHex.slice(5, 7), 16);

        const bg = `rgba(${r}, ${g}, ${b}, ${alpha})`;
        const css = `background: ${bg};
backdrop-filter: blur(${blur}px);
-webkit-backdrop-filter: blur(${blur}px);
border: 1px solid rgba(${r}, ${g}, ${b}, 0.3);`;

        if (box) {
            box.style.background = bg;
            box.style.backdropFilter = `blur(${blur}px)`;
            (box.style as any).webkitBackdropFilter = `blur(${blur}px)`;
            box.style.border = `1px solid rgba(${r}, ${g}, ${b}, 0.3)`;
        }

        document.getElementById("blur-val")!.textContent = blur;
        document.getElementById("alpha-val")!.textContent = alpha;

        if (output) output.textContent = css;
    }

    inputs.forEach((id) =>
        document.getElementById(id)?.addEventListener("input", update),
    );

    document.getElementById("copy")?.addEventListener("click", () => {
        if (output && output.textContent)
            navigator.clipboard.writeText(output.textContent);
    });

    update();
</script>

<style>
    .tool-content {
        display: flex;
        flex-direction: column;
        gap: var(--space-lg);
    }

    .glass-container {
        background: linear-gradient(45deg, #f43f5e, #6366f1);
        padding: 3rem;
        border-radius: var(--radius-lg);
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 300px;
    }

    .glass-box {
        padding: 2rem;
        border-radius: 1rem;
        color: white;
        text-align: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 300px;
    }

    .controls {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: var(--space-md);
    }

    .control-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .code-output {
        background: #1e1e1e;
        padding: 1rem;
        border-radius: var(--radius-md);
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    pre {
        color: #a5f3fc;
        margin: 0;
        white-space: pre-wrap;
    }

    .btn {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

<div class="prime-tool">
    <input
        type="number"
        id="num-in"
        placeholder="أدخل رقم..."
        class="main-input"
    />
    <button id="check-btn" class="btn-primary">فحص</button>

    <div id="result" class="result fade-in hidden">
        <span id="res-icon"></span>
        <span id="res-text"></span>
    </div>
</div>

<script>
    const input = document.getElementById("num-in") as HTMLInputElement;
    const resBox = document.getElementById("result");
    const icon = document.getElementById("res-icon");
    const txt = document.getElementById("res-text");

    function isPrime(num) {
        if (num <= 1) return false;
        if (num <= 3) return true;
        if (num % 2 === 0 || num % 3 === 0) return false;
        for (let i = 5; i * i <= num; i += 6) {
            if (num % i === 0 || num % (i + 2) === 0) return false;
        }
        return true;
    }

    document.getElementById("check-btn").addEventListener("click", () => {
        const val = parseInt(input.value);
        if (isNaN(val)) return;

        resBox.classList.remove("hidden");
        if (isPrime(val)) {
            resBox.className = "result success";
            icon.textContent = "✅";
            txt.textContent = `${val} هو عدد أولي!`;
        } else {
            resBox.className = "result error";
            icon.textContent = "❌";
            txt.textContent = `${val} ليس عدداً أولياً.`;
        }
    });
</script>

<style>
    .prime-tool {
        max-width: 400px;
        margin: 0 auto;
        text-align: center;
    }
    .main-input {
        padding: 12px;
        font-size: 1.2rem;
        border: 1px solid var(--c-border);
        border-radius: 6px;
        width: 100%;
        margin-bottom: 20px;
        text-align: center;
    }
    .btn-primary {
        width: 100%;
        padding: 12px;
        background: var(--c-primary);
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 1.1rem;
    }

    .result {
        margin-top: 30px;
        padding: 20px;
        border-radius: 8px;
        font-weight: bold;
        font-size: 1.2rem;
    }
    .result.success {
        background: #dcfce7;
        color: #166534;
    }
    .result.error {
        background: #fee2e2;
        color: #991b1b;
    }
    .hidden {
        display: none;
    }
</style>

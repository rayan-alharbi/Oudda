<div class="contrast-tool">
    <div class="pickers">
        <label>
            Background
            <input type="color" id="bg" value="#ffffff" />
            <input type="text" id="bg-hex" value="#ffffff" />
        </label>
        <label>
            Foreground
            <input type="color" id="fg" value="#000000" />
            <input type="text" id="fg-hex" value="#000000" />
        </label>
    </div>

    <div class="preview" id="preview-box">Text Preview</div>

    <div class="results">
        <div class="rating-box">
            <div class="ratio-label">Contrast Ratio</div>
            <div class="ratio-val" id="ratio-val">21.00:1</div>
        </div>
        <div class="status-grid">
            <div class="status-card">
                <span>AA Normal</span>
                <span id="aa-norm" class="badge pass">PASS</span>
            </div>
            <div class="status-card">
                <span>AA Large</span>
                <span id="aa-large" class="badge pass">PASS</span>
            </div>
            <div class="status-card">
                <span>AAA Normal</span>
                <span id="aaa-norm" class="badge pass">PASS</span>
            </div>
            <div class="status-card">
                <span>AAA Large</span>
                <span id="aaa-large" class="badge pass">PASS</span>
            </div>
        </div>
    </div>
</div>

<script>
    const bg = document.getElementById("bg") as HTMLInputElement;
    const fg = document.getElementById("fg") as HTMLInputElement;
    const bgHex = document.getElementById("bg-hex") as HTMLInputElement;
    const fgHex = document.getElementById("fg-hex") as HTMLInputElement;
    const preview = document.getElementById("preview-box");
    const ratioVal = document.getElementById("ratio-val");

    // Sync inputs
    bg.addEventListener("input", () => {
        bgHex.value = bg.value;
        update();
    });
    fg.addEventListener("input", () => {
        fgHex.value = fg.value;
        update();
    });
    bgHex.addEventListener("input", () => {
        bg.value = bgHex.value;
        update();
    });
    fgHex.addEventListener("input", () => {
        fg.value = fgHex.value;
        update();
    });

    function getLuminance(hex) {
        const rgb = parseInt(hex.slice(1), 16);
        const r = (rgb >> 16) & 0xff;
        const g = (rgb >> 8) & 0xff;
        const b = (rgb >> 0) & 0xff;

        const [R, G, B] = [r, g, b].map((v) => {
            v /= 255;
            return v <= 0.03928
                ? v / 12.92
                : Math.pow((v + 0.055) / 1.055, 2.4);
        });
        return 0.2126 * R + 0.7152 * G + 0.0722 * B;
    }

    function update() {
        preview.style.backgroundColor = bg.value;
        preview.style.color = fg.value;

        const L1 = getLuminance(bg.value);
        const L2 = getLuminance(fg.value);

        const lighter = Math.max(L1, L2);
        const darker = Math.min(L1, L2);
        const ratio = (lighter + 0.05) / (darker + 0.05);

        ratioVal.textContent = ratio.toFixed(2) + ":1";

        const setBadge = (id, pass) => {
            const el = document.getElementById(id);
            el.textContent = pass ? "PASS" : "FAIL";
            el.className = "badge " + (pass ? "pass" : "fail");
        };

        setBadge("aa-norm", ratio >= 4.5);
        setBadge("aa-large", ratio >= 3.0);
        setBadge("aaa-norm", ratio >= 7.0);
        setBadge("aaa-large", ratio >= 4.5);
    }

    update();
</script>

<style>
    .contrast-tool {
        max-width: 600px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    .pickers {
        display: flex;
        gap: 2rem;
        justify-content: center;
    }
    label {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        text-align: center;
    }
    input[type="color"] {
        width: 100px;
        height: 50px;
        border: none;
        cursor: pointer;
    }
    input[type="text"] {
        padding: 0.5rem;
        text-align: center;
        border: 1px solid var(--c-border);
        border-radius: 4px;
    }

    .preview {
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        border-radius: 12px;
        border: 1px solid var(--c-border);
    }

    .rating-box {
        text-align: center;
        margin-bottom: 1rem;
    }
    .ratio-val {
        font-size: 3rem;
        font-weight: 800;
        color: var(--c-primary);
    }

    .status-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }
    .status-card {
        background: var(--c-surface);
        padding: 1rem;
        border-radius: 8px;
        border: 1px solid var(--c-border);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .badge {
        padding: 0.2rem 0.6rem;
        border-radius: 4px;
        font-weight: bold;
        font-size: 0.8rem;
    }
    .pass {
        background: #dcfce7;
        color: #166534;
    }
    .fail {
        background: #fee2e2;
        color: #991b1b;
    }
</style>

<div class="form-list">
    <div class="group">
        <label>استهلاك الجهاز (واط)</label>
        <input type="number" id="watts" placeholder="1000" />
    </div>
    <div class="group">
        <label>ساعات التشغيل يومياً</label>
        <input type="number" id="hours" placeholder="5" />
    </div>
    <div class="group">
        <label>سعر الكيلوواط (عملة/kWh)</label>
        <input type="number" id="rate" placeholder="0.18" />
    </div>
</div>

<div class="summary-table">
    <div class="row">
        <span>اليوم</span>
        <span id="cost-day">0.00</span>
    </div>
    <div class="row">
        <span>الشهر</span>
        <span id="cost-month">0.00</span>
    </div>
    <div class="row">
        <span>السنة</span>
        <span id="cost-year">0.00</span>
    </div>
</div>

<script>
    const inputs = ["watts", "hours", "rate"].map(
        (id) => document.getElementById(id) as HTMLInputElement,
    );
    const outs = ["cost-day", "cost-month", "cost-year"].map((id) =>
        document.getElementById(id),
    );

    function calc() {
        const [w, h, r] = inputs.map((el) => parseFloat(el.value) || 0);

        const kwhPerDay = (w * h) / 1000;
        const cDay = kwhPerDay * r;
        const cMonth = cDay * 30;
        const cYear = cDay * 365;

        outs[0].textContent = cDay.toFixed(2);
        outs[1].textContent = cMonth.toFixed(2);
        outs[2].textContent = cYear.toFixed(2);
    }

    inputs.forEach((el) => el.addEventListener("input", calc));
</script>

<style>
    .form-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: 500px;
        margin: 0 auto 2rem;
    }
    .group {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    input {
        padding: 0.5rem;
        width: 150px;
        text-align: center;
        border: 1px solid var(--c-border);
        border-radius: 6px;
    }

    .summary-table {
        background: var(--c-surface);
        border-radius: 8px;
        border: 1px solid var(--c-border);
        overflow: hidden;
        max-width: 500px;
        margin: 0 auto;
    }
    .row {
        display: flex;
        justify-content: space-between;
        padding: 1rem;
        border-bottom: 1px solid var(--c-border);
    }
    .row:last-child {
        border-bottom: none;
    }
    .row span:last-child {
        font-weight: bold;
        color: var(--c-primary);
    }
</style>

<div class="case-converter">
    <textarea id="text-raw" placeholder="اكتب النص هنا..."></textarea>

    <div class="buttons">
        <button id="upper">UPPERCASE</button>
        <button id="lower">lowercase</button>
        <button id="title">Title Case</button>
        <button id="sentence">Sentence case</button>
        <button id="copy-text" class="btn-copy">نسخ</button>
    </div>
</div>

<script>
    const el = document.getElementById("text-raw") as HTMLTextAreaElement;

    function toTitleCase(str) {
        return str.replace(
            /\w\S*/g,
            (txt) => txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase(),
        );
    }

    function toSentenceCase(str) {
        return str
            .toLowerCase()
            .replace(/(^\s*\w|[\.\!\?]\s*\w)/g, (c) => c.toUpperCase());
    }

    document
        .getElementById("upper")
        .addEventListener("click", () => (el.value = el.value.toUpperCase()));
    document
        .getElementById("lower")
        .addEventListener("click", () => (el.value = el.value.toLowerCase()));
    document
        .getElementById("title")
        .addEventListener("click", () => (el.value = toTitleCase(el.value)));
    document
        .getElementById("sentence")
        .addEventListener("click", () => (el.value = toSentenceCase(el.value)));
    document.getElementById("copy-text").addEventListener("click", () => {
        navigator.clipboard.writeText(el.value);
    });
</script>

<style>
    .case-converter {
        max-width: 800px;
        margin: 0 auto;
    }
    textarea {
        width: 100%;
        height: 200px;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid var(--c-border);
        border-radius: 8px;
    }
    .buttons {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        justify-content: center;
    }
    button {
        padding: 8px 16px;
        cursor: pointer;
        border: 1px solid var(--c-primary);
        background: var(--c-surface);
        color: var(--c-primary);
        border-radius: 4px;
        font-weight: bold;
    }
    button:hover {
        background: var(--c-background);
    }
    .btn-copy {
        background: var(--c-primary);
        color: white;
        border: none;
    }
    .btn-copy:hover {
        background: var(--c-primary-hover);
    }
</style>

            ".env",
            ".env.local",
            ".env.*.local",
        ],
        python: [
            "# Python",
            "__pycache__/",
            "*.py[cod]",
            "*$py.class",
            "*.so",
            ".Python",
            "venv/",
            ".venv/",
            "env/",
            ".env/",
            "pip-log.txt",
            "",
            "# Distribution",
            "dist/",
            "build/",
            "*.egg-info/",
            ".eggs/",
        ],
        go: [
            "# Go",
            "*.exe",
            "*.exe~",
            "*.dll",
            "*.so",
            "*.dylib",
            "*.test",
            "*.out",
            "vendor/",
            "go.work",
        ],
        rust: ["# Rust", "target/", "*.rs.bk", "Cargo.lock"],
        java: [
            "# Java",
            "*.class",
            "*.jar",
            "*.war",
            "*.ear",
            "target/",
            ".gradle/",
            "build/",
            ".m2/",
        ],
        php: [
            "# PHP",
            "vendor/",
            "composer.lock",
            "*.cache",
            ".phpunit.result.cache",
        ],
    };

    const extras: Record<string, string[]> = {
        git: ["# Git", ".git/", ".gitignore", ".gitattributes"],
        ide: [
            "# IDE",
            ".idea/",
            ".vscode/",
            "*.swp",
            "*.swo",
            ".DS_Store",
            "Thumbs.db",
        ],
        docker: [
            "# Docker",
            "Dockerfile*",
            "docker-compose*.yml",
            ".dockerignore",
        ],
        logs: ["# Logs", "*.log", "logs/"],
        tests: [
            "# Tests",
            "test/",
            "tests/",
            "__tests__/",
            "*.test.*",
            "*.spec.*",
            "coverage/",
            ".nyc_output/",
        ],
        docs: [
            "# Documentation",
            "docs/",
            "README.md",
            "CHANGELOG.md",
            "LICENSE",
        ],
    };

    let currentPreset = "node";

    const presetBtns = document.querySelectorAll(
        ".preset-btn",
    ) as NodeListOf<HTMLButtonElement>;
    const extraChecks = document.querySelectorAll(
        ".extra-check",
    ) as NodeListOf<HTMLInputElement>;
    const customPatterns = document.getElementById(
        "customPatterns",
    ) as HTMLTextAreaElement;
    const generateBtn = document.getElementById(
        "generateBtn",
    ) as HTMLButtonElement;
    const copyBtn = document.getElementById("copyBtn") as HTMLButtonElement;
    const output = document.getElementById("output") as HTMLPreElement;

    function generate() {
        let result: string[] = [];

        // Add preset
        result.push(`# ===== ${currentPreset.toUpperCase()} Project =====`);
        result.push("");
        result = result.concat(presets[currentPreset] || []);
        result.push("");

        // Add extras
        extraChecks.forEach((check) => {
            if (check.checked) {
                const extraKey = check.dataset.extra || "";
                if (extras[extraKey]) {
                    result = result.concat(extras[extraKey]);
                    result.push("");
                }
            }
        });

        // Add custom patterns
        const custom = customPatterns.value.trim();
        if (custom) {
            result.push("# Custom");
            custom.split("\n").forEach((line) => {
                if (line.trim()) result.push(line.trim());
            });
        }

        output.textContent = result.join("\n");
    }

    // Preset selection
    presetBtns.forEach((btn) => {
        btn.addEventListener("click", () => {
            presetBtns.forEach((b) => b.classList.remove("active"));
            btn.classList.add("active");
            currentPreset = btn.dataset.preset || "node";
            generate();
        });
    });

    // Extra checkboxes
    extraChecks.forEach((check) => {
        check.addEventListener("change", generate);
    });

    // Generate button
    generateBtn.addEventListener("click", generate);

    // Copy button
    copyBtn.addEventListener("click", async () => {
        await navigator.clipboard.writeText(output.textContent || "");
        copyBtn.textContent = "âœ… ØªÙ…!";
        setTimeout(() => (copyBtn.textContent = "ğŸ“‹ Ù†Ø³Ø®"), 2000);
    });

    // Initial generation
    generate();
</script>


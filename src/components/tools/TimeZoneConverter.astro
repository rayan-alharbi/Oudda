<div class="tz-tool">
    <div class="input-grp">
        <label>الوقت المحلي (Local)</label>
        <input type="datetime-local" id="local-time" />
    </div>

    <div class="custom-zone">
        <h3>تحويل إلى منطقة محددة</h3>
        <!-- Improved Select with Groups -->
        <select id="tz-select">
            <option value="UTC">UTC (Coordinated Universal Time)</option>
        </select>

        <div class="result-box">
            <span id="custom-res">--</span>
        </div>
    </div>

    <div class="zones-grid">
        <div class="zone-card">
            <h4>London (UTC)</h4>
            <div id="t-utc" class="time"></div>
        </div>
        <div class="zone-card">
            <h4>New York (ET)</h4>
            <div id="t-ny" class="time"></div>
        </div>
        <div class="zone-card">
            <h4>Tokyo (JST)</h4>
            <div id="t-tokyo" class="time"></div>
        </div>
        <div class="zone-card">
            <h4>Dubai (GST)</h4>
            <div id="t-dubai" class="time"></div>
        </div>
        <div class="zone-card">
            <h4>Makkah (KSA)</h4>
            <div id="t-ksa" class="time"></div>
        </div>
        <div class="zone-card">
            <h4>Cairo (EET)</h4>
            <div id="t-cairo" class="time"></div>
        </div>
    </div>
</div>

<script>
    const localIn = document.getElementById("local-time") as HTMLInputElement;
    const tzSelect = document.getElementById("tz-select") as HTMLSelectElement;
    const customRes = document.getElementById("custom-res");

    // Init time
    const now = new Date();
    now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
    localIn.value = now.toISOString().slice(0, 16);

    // Grouping Zones
    function populateZones() {
        // @ts-ignore
        if (typeof Intl.supportedValuesOf !== "function") return;

        // @ts-ignore
        const zones = Intl.supportedValuesOf("timeZone");
        const groups = {};

        zones.forEach((z) => {
            const parts = z.split("/");
            const region = parts[0];
            const city = parts.slice(1).join("/").replace(/_/g, " ");

            if (!groups[region]) groups[region] = [];
            groups[region].push({ val: z, label: city });
        });

        // Sort and Render Groups
        Object.keys(groups)
            .sort()
            .forEach((region) => {
                const optgroup = document.createElement("optgroup");
                optgroup.label = region;

                groups[region].forEach((item) => {
                    const opt = document.createElement("option");
                    opt.value = item.val;
                    opt.textContent = item.label; // Only city name for simpler view
                    if (item.val === "Asia/Riyadh") opt.selected = true;
                    optgroup.appendChild(opt);
                });

                tzSelect.appendChild(optgroup);
            });
    }

    populateZones();

    function update() {
        const val = localIn.value;
        if (!val) return;
        const d = new Date(val);

        const opts = {
            hour: "numeric",
            minute: "numeric",
            day: "numeric",
            month: "short",
            weekday: "short",
        } as const;

        document.getElementById("t-utc").textContent = d.toLocaleString(
            "en-US",
            { ...opts, timeZone: "UTC" },
        );
        document.getElementById("t-ny").textContent = d.toLocaleString(
            "en-US",
            { ...opts, timeZone: "America/New_York" },
        );
        document.getElementById("t-tokyo").textContent = d.toLocaleString(
            "en-US",
            { ...opts, timeZone: "Asia/Tokyo" },
        );
        document.getElementById("t-dubai").textContent = d.toLocaleString(
            "en-US",
            { ...opts, timeZone: "Asia/Dubai" },
        );
        document.getElementById("t-ksa").textContent = d.toLocaleString(
            "en-US",
            { ...opts, timeZone: "Asia/Riyadh" },
        );
        document.getElementById("t-cairo").textContent = d.toLocaleString(
            "en-US",
            { ...opts, timeZone: "Africa/Cairo" },
        );

        // Custom
        const selZone = tzSelect.value;
        try {
            customRes.textContent =
                d.toLocaleString("en-US", { ...opts, timeZone: selZone }) +
                ` (${selZone})`;
        } catch (e) {
            customRes.textContent = "Invalid Zone";
        }
    }

    localIn.addEventListener("input", update);
    tzSelect.addEventListener("change", update);
    update();
</script>

<style>
    .tz-tool {
        max-width: 800px;
        margin: 0 auto;
    }
    .input-grp {
        margin-bottom: 20px;
        text-align: center;
    }
    input {
        padding: 10px;
        font-size: 1.2rem;
        border-radius: 6px;
        border: 1px solid var(--c-border);
        width: 100%;
        max-width: 300px;
    }

    .custom-zone {
        background: #1e293b;
        color: white;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
        text-align: center;
    }
    .custom-zone h3 {
        margin-top: 0;
        color: #94a3b8;
    }

    select {
        padding: 12px;
        border-radius: 6px;
        font-size: 1rem;
        width: 100%;
        max-width: 400px;
        margin-bottom: 15px;
        background: #334155;
        color: white;
        border: 1px solid #475569;
    }

    .result-box {
        font-size: 1.5rem;
        font-weight: bold;
        color: #4ade80;
        margin-top: 10px;
        min-height: 40px;
    }

    .zones-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 15px;
    }

    .zone-card {
        background: var(--c-surface);
        padding: 15px;
        border-radius: 8px;
        border: 1px solid var(--c-border);
        text-align: center;
    }
    h4 {
        margin: 0 0 10px 0;
        color: var(--c-text-muted);
    }
    .time {
        font-size: 1.2rem;
        font-weight: bold;
        color: var(--c-primary);
    }
</style>

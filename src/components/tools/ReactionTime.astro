<div class="tool-content">
    <div id="game-area" class="game-area state-waiting">
        <div id="message" class="message">Click to Start</div>
    </div>

    <div class="results-list">
        <h3>History</h3>
        <ul id="history"></ul>
        <button id="clear-btn" class="clear-link">Clear</button>
    </div>
</div>

<script>
    const area = document.getElementById("game-area");
    const message = document.getElementById("message");
    const historyList = document.getElementById("history");

    let state = "waiting"; // waiting, ready, now, result
    let timeoutId: any = null;
    let startTime = 0;

    area?.addEventListener("mousedown", () => {
        switch (state) {
            case "waiting":
            case "result":
                startGame();
                break;
            case "ready":
                // Too early
                failed();
                break;
            case "now":
                finish();
                break;
        }
    });

    function startGame() {
        state = "ready";
        if (area) area.className = "game-area state-ready";
        if (message) message.textContent = "Wait for Green...";

        const delay = 1000 + Math.random() * 3000; // 1-4 seconds
        timeoutId = setTimeout(() => {
            state = "now";
            startTime = Date.now();
            if (area) area.className = "game-area state-now";
            if (message) message.textContent = "CLICK!";
        }, delay);
    }

    function failed() {
        state = "result";
        clearTimeout(timeoutId);
        if (area) area.className = "game-area state-result";
        if (message) message.textContent = "Too Early! Click to try again.";
    }

    function finish() {
        const time = Date.now() - startTime;
        state = "result";
        if (area) area.className = "game-area state-result";
        if (message) message.textContent = `${time} ms\nClick to try again`;

        addHistory(time);
    }

    function addHistory(time: number) {
        const li = document.createElement("li");
        li.textContent = `${time} ms`;
        historyList?.prepend(li);

        // limit to 5
        if (historyList && historyList.children.length > 5) {
            historyList.lastElementChild?.remove();
        }
    }

    document.getElementById("clear-btn")?.addEventListener("click", () => {
        if (historyList) historyList.innerHTML = "";
    });
</script>

<style>
    .tool-content {
        display: flex;
        flex-direction: column;
        gap: var(--space-lg);
        align-items: center;
    }

    .game-area {
        width: 100%;
        height: 300px;
        border-radius: var(--radius-lg);
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        user-select: none;
        transition: background 0.2s;
    }

    .message {
        font-size: 2rem;
        font-weight: bold;
        color: white;
        text-align: center;
        white-space: pre-wrap;
    }

    /* States */
    .state-waiting {
        background: #3b82f6;
    } /* Blue */
    .state-ready {
        background: #ef4444;
    } /* Red */
    .state-now {
        background: #22c55e;
    } /* Green */
    .state-result {
        background: #3b82f6;
    } /* Blue */

    .results-list {
        width: 100%;
        max-width: 300px;
        text-align: center;
    }

    ul {
        list-style: none;
        padding: 0;
    }

    li {
        padding: 0.5rem;
        border-bottom: 1px solid var(--c-border);
        font-size: 1.1rem;
    }

    .clear-link {
        background: none;
        border: none;
        color: var(--c-text-muted);
        cursor: pointer;
        margin-top: 0.5rem;
        text-decoration: underline;
    }
</style>

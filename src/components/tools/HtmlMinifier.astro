<div class="tool-wrapper">
    <textarea id="input" placeholder="Paste HTML code here..."></textarea>
    <button id="minify-btn" class="btn">Minify HTML</button>
    <textarea id="output" readonly placeholder="Minified result..."></textarea>
</div>

<script>
    const input = document.getElementById("input") as HTMLTextAreaElement;
    const output = document.getElementById("output") as HTMLTextAreaElement;

    document.getElementById("minify-btn").addEventListener("click", () => {
        let code = input.value;
        // Remove comments
        code = code.replace(/<!--[\s\S]*?-->/g, "");
        // Remove whitespace between tags
        code = code.replace(/>\s+</g, "><");
        // Remove extra whitespace
        code = code.replace(/\s{2,}/g, " ");
        output.value = code.trim();
    });
</script>

<style>
    .tool-wrapper {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    textarea {
        width: 100%;
        height: 200px;
        padding: 1rem;
        border: 1px solid var(--c-border);
        border-radius: 8px;
        font-family: monospace;
    }
    .btn {
        background: var(--c-primary);
        color: white;
        padding: 0.8rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        width: 150px;
    }
</style>

<div class="word-counter">
    <textarea id="text-input" placeholder="اكتب أو الصق النص هنا..."></textarea>

    <div class="stats-grid">
        <div class="stat-card">
            <span class="stat-val" id="word-count">0</span>
            <span class="stat-label">كلمات</span>
        </div>
        <div class="stat-card">
            <span class="stat-val" id="char-count">0</span>
            <span class="stat-label">حروف</span>
        </div>
        <div class="stat-card">
            <span class="stat-val" id="char-no-space">0</span>
            <span class="stat-label">حروف (بدون مسافات)</span>
        </div>
        <div class="stat-card">
            <span class="stat-val" id="para-count">0</span>
            <span class="stat-label">فقرات</span>
        </div>
    </div>
</div>

<script>
    const input = document.getElementById("text-input") as HTMLTextAreaElement;
    const wordEl = document.getElementById("word-count");
    const charEl = document.getElementById("char-count");
    const charNoSpaceEl = document.getElementById("char-no-space");
    const paraEl = document.getElementById("para-count");

    function analyze() {
        const text = input.value;

        // Characters
        charEl.textContent = text.length.toString();
        charNoSpaceEl.textContent = text.replace(/\s/g, "").length.toString();

        // Words (split by whitespace, filter empty)
        const words = text
            .trim()
            .split(/\s+/)
            .filter((w) => w.length > 0);
        wordEl.textContent = words.length.toString();

        // Paragraphs (split by newline, filter empty)
        const paras = text.split(/\n+/).filter((p) => p.trim().length > 0);
        paraEl.textContent = paras.length.toString();
    }

    input.addEventListener("input", analyze);
</script>

<style>
    .word-counter {
        max-width: 800px;
        margin: 0 auto;
    }

    textarea {
        width: 100%;
        height: 200px;
        padding: var(--space-md);
        border: 1px solid var(--c-border);
        border-radius: var(--radius-lg);
        font-family: inherit;
        font-size: 1.1rem;
        margin-bottom: var(--space-lg);
        resize: vertical;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: var(--space-md);
    }

    .stat-card {
        background: var(--c-surface);
        padding: var(--space-md);
        border-radius: var(--radius-md);
        border: 1px solid var(--c-border);
        text-align: center;
    }

    .stat-val {
        display: block;
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--c-primary);
        line-height: 1.2;
    }

    .stat-label {
        color: var(--c-text-muted);
        font-size: 0.9rem;
    }
</style>

<div class="tool-wrapper">
    <div class="inputs">
        <input type="number" id="num-a" placeholder="Number A" />
        <input type="number" id="num-b" placeholder="Number B" />
    </div>

    <div class="results">
        <div class="card">
            <span class="label">GCD (القاسم المشترك الأكبر)</span>
            <span class="val" id="gcd-val">-</span>
        </div>
        <div class="card">
            <span class="label">LCM (المضاعف المشترك الأصغر)</span>
            <span class="val" id="lcm-val">-</span>
        </div>
    </div>
</div>

<script>
    const numA = document.getElementById("num-a") as HTMLInputElement;
    const numB = document.getElementById("num-b") as HTMLInputElement;
    const gcdEl = document.getElementById("gcd-val");
    const lcmEl = document.getElementById("lcm-val");

    function gcd(a, b) {
        return !b ? a : gcd(b, a % b);
    }

    function lcm(a, b) {
        return (a * b) / gcd(a, b);
    }

    function calc() {
        const a = parseInt(numA.value);
        const b = parseInt(numB.value);

        if (isNaN(a) || isNaN(b)) {
            gcdEl.textContent = "-";
            lcmEl.textContent = "-";
            return;
        }

        const g = gcd(Math.abs(a), Math.abs(b));
        const l = lcm(Math.abs(a), Math.abs(b));

        gcdEl.textContent = g.toString();
        lcmEl.textContent = l.toString();
    }

    numA.addEventListener("input", calc);
    numB.addEventListener("input", calc);
</script>

<style>
    .tool-wrapper {
        max-width: 600px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    .inputs {
        display: flex;
        gap: 1rem;
    }
    input {
        flex: 1;
        padding: 1rem;
        border: 1px solid var(--c-border);
        border-radius: 8px;
        font-size: 1.2rem;
        text-align: center;
    }
    .results {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }
    .card {
        background: var(--c-surface);
        padding: 1.5rem;
        text-align: center;
        border-radius: 8px;
        border: 1px solid var(--c-border);
    }
    .label {
        display: block;
        color: var(--c-text-muted);
        margin-bottom: 0.5rem;
    }
    .val {
        font-size: 2rem;
        font-weight: bold;
        color: var(--c-primary);
    }
</style>

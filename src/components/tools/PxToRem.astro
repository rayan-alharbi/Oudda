<div class="converter-box">
    <div class="input-group">
        <label>Pixels (px)</label>
        <input type="number" id="px-input" placeholder="16" value="16" />
    </div>

    <div class="icon">â‡„</div>

    <div class="input-group">
        <label>Rem</label>
        <input type="number" id="rem-input" placeholder="1" value="1" />
    </div>

    <div class="settings">
        <label>Root Font Size (px)</label>
        <input type="number" id="root-size" value="16" />
    </div>
</div>

<script>
    const pxInput = document.getElementById("px-input") as HTMLInputElement;
    const remInput = document.getElementById("rem-input") as HTMLInputElement;
    const rootInput = document.getElementById("root-size") as HTMLInputElement;

    function toRem() {
        const px = parseFloat(pxInput.value) || 0;
        const root = parseFloat(rootInput.value) || 16;
        remInput.value = (px / root).toString(); // Keep decimals
    }

    function toPx() {
        const rem = parseFloat(remInput.value) || 0;
        const root = parseFloat(rootInput.value) || 16;
        pxInput.value = (rem * root).toString();
    }

    pxInput.addEventListener("input", toRem);
    remInput.addEventListener("input", toPx);
    rootInput.addEventListener("input", () => {
        toRem();
    }); // Update based on px
</script>


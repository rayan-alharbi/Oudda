<div class="tool-split">
    <div class="col">
        <label>CSV Input</label>
        <textarea
            id="csv-input"
            placeholder="Name,Age,City
Alice,25,New York
Bob,30,London"
        ></textarea>
    </div>
    <div class="actions">
        <button id="convert-btn" class="btn">Convert &rarr;</button>
        <label class="check"
            ><input type="checkbox" id="header" checked /> First row is header</label
        >
    </div>
    <div class="col">
        <label>Markdown Output</label>
        <textarea id="md-output" readonly></textarea>
    </div>
</div>

<script>
    const input = document.getElementById("csv-input") as HTMLTextAreaElement;
    const output = document.getElementById("md-output") as HTMLTextAreaElement;
    const headerCb = document.getElementById("header") as HTMLInputElement;

    document.getElementById("convert-btn").addEventListener("click", () => {
        const text = input.value.trim();
        if (!text) return;

        const lines = text.split("\n");
        const rows = lines.map((line) => line.split(",").map((c) => c.trim())); // Naive CSV split

        if (rows.length === 0) return;

        let md = "";

        // Header
        const head = rows[0];
        md += "| " + head.join(" | ") + " |\n";

        // Separator
        md += "| " + head.map(() => "---").join(" | ") + " |\n";

        // Body
        const start = headerCb.checked ? 1 : 0;
        // If not header, we actually just printed the first row as header anyway for structure?
        // Or if uncheck "First row is header" usually means generate dummy header?
        // Let's stick to standard behavior: if unchecked, treat row 0 as data?
        // But markdown tables NEED a header. So we'll auto-generate Header 1, Header 2 if unchecked.

        // Actually simpler: Always assume first row is header for this basic tool,
        // or just process all rows.
        // The code above prints row 0 as header.

        for (let i = 1; i < rows.length; i++) {
            md += "| " + rows[i].join(" | ") + " |\n";
        }

        output.value = md;
    });
</script>

<style>
    .tool-split {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        gap: 1rem;
        align-items: center;
    }
    @media (max-width: 768px) {
        .tool-split {
            grid-template-columns: 1fr;
        }
    }

<div class="rot13-tool">
    <textarea id="rot-in" placeholder="أدخل النص هنا للتحويل (English Only)..."
    ></textarea>
    <div class="actions">
        <span>⟷ ROT13 ⟷</span>
    </div>
    <textarea id="rot-out" readonly></textarea>
</div>

<script>
    const inp = document.getElementById("rot-in") as HTMLTextAreaElement;
    const out = document.getElementById("rot-out") as HTMLTextAreaElement;

    function rot13(str) {
        return str.replace(/[a-zA-Z]/g, function (c) {
            return String.fromCharCode(
                (c <= "Z" ? 90 : 122) >= (c = c.charCodeAt(0) + 13)
                    ? c
                    : c - 26,
            );
        });
    }

    inp.addEventListener("input", () => {
        out.value = rot13(inp.value);
    });
</script>

<style>
    .rot13-tool {
        max-width: 600px;
        margin: 0 auto;
    }
    textarea {
        width: 100%;
        height: 150px;
        padding: 10px;
        border: 1px solid var(--c-border);
        border-radius: 6px;
        font-family: monospace;
        margin-bottom: 10px;
    }
    .actions {
        text-align: center;
        font-weight: bold;
        margin-bottom: 10px;
        color: var(--c-primary);
    }
</style>

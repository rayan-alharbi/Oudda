<div class="cron-tool">
    <div class="controls">
        <div class="grp">
            <label>الدقائق (Minute)</label>
            <input type="text" id="min" value="*" placeholder="0-59 or *" />
        </div>
        <div class="grp">
            <label>الساعات (Hour)</label>
            <input type="text" id="hour" value="*" placeholder="0-23 or *" />
        </div>
        <div class="grp">
            <label>يوم الشهر (Day)</label>
            <input type="text" id="dom" value="*" placeholder="1-31 or *" />
        </div>
        <div class="grp">
            <label>الشهر (Month)</label>
            <input type="text" id="mon" value="*" placeholder="1-12 or *" />
        </div>
        <div class="grp">
            <label>يوم الأسبوع (WeekDay)</label>
            <input type="text" id="dow" value="*" placeholder="0-6 or *" />
        </div>
    </div>

    <div class="output">
        <div class="cron-exp" id="exp">* * * * *</div>
        <div class="desc" id="desc">Every minute</div>
    </div>

    <div class="presets">
        <button data-val="* * * * *">Every Minute</button>
        <button data-val="0 * * * *">Hourly</button>
        <button data-val="0 0 * * *">Daily</button>
        <button data-val="0 0 * * 0">Weekly</button>
        <button data-val="0 0 1 * *">Monthly</button>
    </div>
</div>

<script>
    const inputs = document.querySelectorAll(".controls input");
    const exp = document.getElementById("exp");
    const desc = document.getElementById("desc");

    function update() {
        const val = Array.from(inputs)
            .map((i: any) => i.value)
            .join(" ");
        exp.textContent = val;
        // Simple description logic could be added here, or use a lib like cronstrue
        // For now, static text or simple feedback
    }

    inputs.forEach((i) => i.addEventListener("input", update));

    document.querySelectorAll(".presets button").forEach((btn) => {
        btn.addEventListener("click", (e) => {
            const val = (e.target as HTMLElement).dataset.val;
            const parts = val.split(" ");
            inputs.forEach((inp: any, idx) => (inp.value = parts[idx]));
            update();
        });
    });
</script>

<style>
    .cron-tool {
        max-width: 600px;
        margin: 0 auto;
    }
    .controls {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 5px;
        margin-bottom: 20px;
    }
    input {
        width: 100%;
        text-align: center;
        padding: 10px;
        border: 1px solid var(--c-border);
        border-radius: 4px;
    }
    label {
        display: block;
        font-size: 0.8rem;
        text-align: center;
        margin-bottom: 5px;
    }

    .output {
        text-align: center;
        background: #1e293b;
        color: white;
        padding: 30px;
        border-radius: 8px;
        margin-bottom: 20px;
    }
    .cron-exp {
        font-size: 2.5rem;
        font-family: monospace;
        font-weight: bold;
        margin-bottom: 10px;
        color: #4ade80;
    }

    .presets {
        display: flex;
        gap: 10px;
        justify-content: center;
        flex-wrap: wrap;
    }
    .presets button {
        padding: 8px 16px;
        background: var(--c-surface);
        border: 1px solid var(--c-border);
        border-radius: 20px;
        cursor: pointer;
    }
    .presets button:hover {
        background: var(--c-primary);
        color: white;
    }
</style>

<div class="bmi-calc">
    <div class="inputs">
        <div class="group">
            <label>الوزن (kg)</label>
            <input type="number" id="weight" placeholder="70" />
        </div>
        <div class="group">
            <label>الطول (cm)</label>
            <input type="number" id="height" placeholder="170" />
        </div>
    </div>

    <button id="calc-bmi" class="btn-primary">احسب الكتلة</button>

    <div id="res-box" class="res-box hidden">
        <div class="score" id="bmi-score">0.0</div>
        <div class="status" id="bmi-status">-</div>
    </div>
</div>

<script>
    const w = document.getElementById("weight") as HTMLInputElement;
    const h = document.getElementById("height") as HTMLInputElement;
    const score = document.getElementById("bmi-score");
    const status = document.getElementById("bmi-status");
    const box = document.getElementById("res-box");

    document.getElementById("calc-bmi").addEventListener("click", () => {
        const weight = parseFloat(w.value);
        const height = parseFloat(h.value) / 100; // cm to m

        if (weight > 0 && height > 0) {
            const bmi = weight / (height * height);
            score.textContent = bmi.toFixed(1);

            let st = "";
            let color = "";
            if (bmi < 18.5) {
                st = "نحافة";
                color = "#3b82f6";
            } else if (bmi < 25) {
                st = "وزن مثالي";
                color = "#10b981";
            } else if (bmi < 30) {
                st = "زيادة وزن";
                color = "#f59e0b";
            } else {
                st = "سمنة";
                color = "#ef4444";
            }

            status.textContent = st;
            status.style.color = color;
            box.classList.remove("hidden");
        }
    });
</script>

<style>
    .bmi-calc {
        max-width: 400px;
        margin: 0 auto;
        text-align: center;
    }
    .inputs {
        display: flex;
        gap: 20px;
        justify-content: center;
        margin-bottom: 20px;
    }
    .group {
        display: flex;
        flex-direction: column;
    }
    input {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        width: 100px;
        text-align: center;
        font-size: 1.1rem;
    }
    .btn-primary {
        width: 100%;
        padding: 12px;
        border: none;
        background: var(--c-primary);
        color: white;
        border-radius: 8px;
        font-size: 1.1rem;
        cursor: pointer;
    }
    .res-box {
        margin-top: 30px;
        padding: 20px;
        background: var(--c-surface);
        border-radius: 8px;
        box-shadow: var(--shadow-sm);
    }
    .score {
        font-size: 3rem;
        font-weight: bold;
        color: var(--c-text-main);
    }
    .status {
        font-size: 1.5rem;
        font-weight: bold;
        margin-top: 10px;
    }
    .hidden {
        display: none;
    }
</style>

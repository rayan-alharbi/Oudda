<div class="screen-tool">
    <div class="screen-card">
        <div class="icon">üñ•Ô∏è</div>
        <div class="res-display">
            <span id="w">0</span> x <span id="h">0</span>
        </div>
        <div class="detail">Screen Resolution</div>
    </div>

    <div class="grid">
        <div class="card">
            <label>Viewport</label>
            <span id="vp-size">-</span>
        </div>
        <div class="card">
            <label>Color Depth</label>
            <span id="depth">-</span>
        </div>
        <div class="card">
            <label>Pixel Ratio</label>
            <span id="dpr">-</span>
        </div>
        <div class="card">
            <label>Orientation</label>
            <span id="orient">-</span>
        </div>
    </div>
</div>

<script>
    const w = document.getElementById("w");
    const h = document.getElementById("h");
    const vp = document.getElementById("vp-size");
    const depth = document.getElementById("depth");
    const dpr = document.getElementById("dpr");
    const orient = document.getElementById("orient");

    function update() {
        w.textContent = window.screen.width.toString();
        h.textContent = window.screen.height.toString();
        vp.textContent = `${window.innerWidth} x ${window.innerHeight}`;
        depth.textContent = `${window.screen.colorDepth}-bit`;
        dpr.textContent = window.devicePixelRatio.toFixed(2);
        orient.textContent = screen.orientation
            ? screen.orientation.type
            : window.innerWidth > window.innerHeight
              ? "Landscape"
              : "Portrait";
    }

    window.addEventListener("resize", update);
    update();
</script>

<style>
    .screen-tool {
        max-width: 600px;
        margin: 0 auto;
    }
    .screen-card {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
        padding: 30px;
        border-radius: 12px;
        text-align: center;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }
    .icon {
        font-size: 3rem;
        margin-bottom: 10px;
    }
    .res-display {
        font-size: 2.5rem;
        font-weight: bold;
        font-family: monospace;
    }

    .grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }
    .card {
        background: var(--c-surface);
        padding: 15px;
        border-radius: 8px;
        border: 1px solid var(--c-border);
        text-align: center;
    }
    .card label {
        display: block;
        color: var(--c-text-muted);
        font-size: 0.9rem;
        margin-bottom: 5px;
        text-transform: uppercase;
    }
    .card span {
        font-weight: bold;
        font-size: 1.2rem;
        color: var(--c-text-main);
    }
</style>

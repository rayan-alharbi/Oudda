<div class="tool-content">
    <div id="dice-container" class="dice-container">
        <div class="die">1</div>
    </div>

    <div class="controls">
        <div class="settings">
            <label>Number of Dice:</label>
            <input type="number" id="num-dice" min="1" max="6" value="1" />
        </div>
        <button id="roll-btn" class="btn primary">ROLL</button>
    </div>

    <div class="total">
        Total: <span id="total-val">1</span>
    </div>
</div>

<script>
    const container = document.getElementById("dice-container");
    const rollBtn = document.getElementById("roll-btn");
    const numInput = document.getElementById("num-dice") as HTMLInputElement;
    const totalDisplay = document.getElementById("total-val");

    rollBtn?.addEventListener("click", () => {
        const count = parseInt(numInput.value) || 1;

        // Animate
        rollBtn.setAttribute("disabled", "true");
        if (container) {
            container.innerHTML = "";

            // Create placeholders
            for (let i = 0; i < count; i++) {
                const die = document.createElement("div");
                die.className = "die rolling";
                die.textContent = "?";
                container.appendChild(die);
            }

            setTimeout(() => {
                let total = 0;
                container.innerHTML = "";

                for (let i = 0; i < count; i++) {
                    const val = Math.floor(Math.random() * 6) + 1;
                    total += val;

                    const die = document.createElement("div");
                    die.className = "die";
                    die.textContent = val.toString();
                    // Add dots representation later if needed, mostly text is fine for 1-6
                    container.appendChild(die);
                }

                if (totalDisplay) totalDisplay.textContent = total.toString();
                rollBtn.removeAttribute("disabled");
            }, 800);
        }
    });

    // Initial setup
    numInput.addEventListener("change", () => {
        if (parseInt(numInput.value) > 6) numInput.value = "6";
        if (parseInt(numInput.value) < 1) numInput.value = "1";
    });
</script>

<style>
    .tool-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--space-lg);
    }

    .dice-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1.5rem;
        min-height: 120px;
        padding: 2rem;
    }

    :global(.die) {
        width: 80px;
        height: 80px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
        border: 2px solid #e5e5e5;
    }

    :global(.die.rolling) {
        animation: shake 0.5s infinite;
        color: #aaa;
    }

    @keyframes shake {
        0% {
            transform: rotate(0deg);
        }
        25% {
            transform: rotate(10deg);
        }
        50% {
            transform: rotate(0deg);
        }
        75% {
            transform: rotate(-10deg);
        }
        100% {
            transform: rotate(0deg);
        }
    }

    .controls {
        display: flex;
        gap: var(--space-md);
        align-items: center;
    }

    input {
        width: 60px;
        padding: 0.5rem;
        border: 1px solid var(--c-border);
        border-radius: var(--radius-sm);
        text-align: center;
    }

    .btn {
        padding: 0.75rem 2rem;
        border: none;
        background: var(--c-primary);
        color: white;
        font-weight: bold;
        border-radius: 2rem;
        cursor: pointer;
    }

    .total {
        font-size: 1.5rem;
        font-weight: bold;
    }
</style>
